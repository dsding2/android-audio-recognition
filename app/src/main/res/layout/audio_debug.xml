<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/amplitudeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amplitude: 0"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Display3" />

    <Button
        android:id="@+id/recordButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Record" />

    <TextView
        android:id="@+id/counterText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <view
        android:id="@+id/MFCCView"
        class="app.danielding.voiceactivation.MFCCHeatmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>